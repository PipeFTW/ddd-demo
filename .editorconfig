# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 200
trim_trailing_whitespace = true
ij_typescript_use_double_quotes = false
ij_visual_guides = 200
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false
